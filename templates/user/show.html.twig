{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.Prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.Email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.Phone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.Adresse }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ user.Zipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.Ville }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ user.DateNaissance ? user.DateNaissance|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.Photo }}</td>
            </tr>
            <tr>
                <th>APropos</th>
                <td>{{ user.APropos }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.Password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.Role }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

