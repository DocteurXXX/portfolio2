<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}{% endblock %}

        <!-- Bootstrap CSS CDN -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">

    </head>
    <style>
        .container-fluid
        {
            background: cadetblue;
            width: 80%;
            align-content: center;
            margin-left: auto;
            margin-right: auto;
            border-radius: 10px;
            border-style: solid;
            border-width: thin;
            border-color: cadetblue;
        }

        img
        {
            margin-top: 2%;
            border-radius: 20px;
        }

        .ID
        {
            color: white;
            font-size: 60px;
        }

        h3
        {
            color: white;
        }

    </style>

    <body>



    <div class="container-fluid">
        <div class="row col-12">
            <div class="row">

                <div class="col-12">
                    <h1 class="ID">{{ user.prenom }} {{ user.nom }} </h1>
                </div>

                <div class="col-12">
                    <h2>{{ user.titre }}</h2>
                </div

                <div class="col-12">
                    {% include 'navbar.html.twig' %}
                </div>

            </div>

            <div class="row">

                <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                    <img src="{{ asset('uploads/'~ user.photo )}}" alt="" style="width: 100%">
                    <h3 style="margin-top: 5%">Email :</h3>
                    <p>{{ user.email }}</p>
                    <h3>Téléphone :</h3>
                    <p>{{ user.phone }}</p>
                    <h3>Adresse :</h3>
                    <p style="text-align: justify">{{ user.adresse }}</p>
                    <p style="text-align: justify">{{ user.zipcode }} {{ user.ville }}</p>
                    <h3>Date de naissance :</h3>
                    <p>{{ user.dateNaissance | date('d/m/Y')}}</p>
                </div>

                <div class="col-12 col-sm-12 col-md-6 col-lg-9 col-xl-9" style="background-color: white">
                    {% block body %}{% endblock %}
                </div>

            </div>

        {% block javascripts %}{% endblock %}
        </div>
    </div>
    </body>
</html>
